{
  "name": "once",
  "version": "0.0.1",
  "description": "See it once",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc --skipLibCheck && npm run copy_static",
    "package": "electron-packager . once --out ../build_once --platform=win32 --arch=x64 --overwrite --icon dist/static/imgs/icons/mipmap-mdpi/ic_launcher.png --prune --ignore=^/src --ignore=\"/\\..*\"",
    "watch": "tsc --skipLibCheck -w",
    "copy_static": "copyfiles -u 1 src/static/**/*[.html,.css,.png,svg,.ico,.txt] dist/",
    "watch_static": "nodemon --watch \"src/static/*\" --exec \"npm run copy_static\" -e * ",
    "start": "npm run build && electron ./dist/main.js",
    "relaunch": "env LDEV=1 nodemon --watch * --exec \"node_modules/.bin/electron .\"",
    "dev_start": "env LDEV=1 npm start"
  },
  "author": "",
  "devDependencies": {
    "@types/pouchdb": "^6.4.0",
    "copyfiles": "^2.3.0",
    "electron": "^10.1.2",
    "electron-packager": "^15.1.0",
    "electron-reload": "^1.5.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.18.2",
    "cross-fetch": "^3.0.6",
    "on-change": "^2.1.2",
    "pouchdb-browser": "^7.2.2"
  }
}